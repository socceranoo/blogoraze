extends layout
block content
	- var foo = "Default title"
	h1= title
	form(method="post").form-horizontal.text-center
		div.form-group
			label(class="control-label col-sm-2" for="title") Title :
			div.col-sm-10
				input(required type="text", name="title", class="form-control", placeholder= foo)
		div.form-group
			label(class="control-label col-sm-2" for="body") Body :
			div.col-sm-10
				textarea(required name="body", rows=5,  class="form-control")
		div.form-group
			input(type="submit", value="Send" class="btn btn-default btn-primary")
